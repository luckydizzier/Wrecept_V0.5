<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="WindowBackground" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="PrimaryBrush" Color="#FF007ACC" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="#FF2D2D30" />
    <SolidColorBrush x:Key="ControlBackground" Color="#FFF0F0F0" />
    <SolidColorBrush x:Key="ControlForeground" Color="Black" />
    <FontFamily x:Key="DefaultFont">Segoe UI</FontFamily>
    <Style TargetType="Button">
        <Setter Property="Foreground" Value="{DynamicResource ControlForeground}" />
        <Setter Property="Background" Value="{DynamicResource ControlBackground}" />
        <Setter Property="FontFamily" Value="{DynamicResource DefaultFont}" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="Padding" Value="4,2" />
    </Style>
</ResourceDictionary>
