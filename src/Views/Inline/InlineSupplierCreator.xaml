<UserControl x:Class="Wrecept.Views.Inline.InlineSupplierCreator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Focusable="False">
    <StackPanel Orientation="Horizontal" Margin="{DynamicResource SpacingSmall}">
        <TextBox Text="{Binding Name}" Width="120" Margin="0,0,5,0"/>
        <TextBox Text="{Binding TaxId}" Width="120" Margin="0,0,5,0"/>
        <Button Content="Mentés" Command="{Binding SaveCommand}" Margin="0,0,5,0"/>
        <Button Content="Mégse" Command="{Binding CancelCommand}"/>
    </StackPanel>
</UserControl>
