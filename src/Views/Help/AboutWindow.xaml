<UserControl x:Class="Wrecept.Views.Help.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="{DynamicResource SpacingLarge}">
        <TextBlock x:Uid="About_AppName" Text="{DynamicResource About_AppName}" FontWeight="Bold" FontSize="{DynamicResource BaseFontSize}" />
        <TextBlock x:Uid="About_Version" Text="{DynamicResource About_Version}" Margin="0,5,0,0" />
        <Button x:Uid="OK_Button" Content="{DynamicResource OK_Button}" Command="{Binding CloseCommand}" HorizontalAlignment="Right" Margin="{DynamicResource MarginTopMedium}" Width="80"/>
    </StackPanel>
</UserControl>
