<Window x:Class="Wrecept.Views.InvoiceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Wrecept.Views.InvoiceParts"
        Title="Számlák kezelése"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackground}"
        Width="900" Height="600">
    <Window.InputBindings>
        <KeyBinding Key="S" Modifiers="Control" Command="{Binding SaveCommand}" />
        <KeyBinding Key="Escape" Command="{Binding ExitToListCommand}" />
    </Window.InputBindings>

    <DockPanel>
        <views:InvoiceSidebar DockPanel.Dock="Left"
                              DataContext="{Binding SidebarViewModel}" />
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <views:InvoiceHeader Margin="10"
                                 DataContext="{Binding HeaderViewModel}" />
            <views:InvoiceItemsGrid Grid.Row="1" Margin="10"
                                    DataContext="{Binding ItemsViewModel}" />
            <views:InvoiceSummary Grid.Row="2" Margin="10"
                                  DataContext="{Binding SummaryViewModel}" />
        </Grid>
    </DockPanel>
</Window>
