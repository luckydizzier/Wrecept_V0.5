<Window x:Class="Wrecept.Views.InvoiceEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ip="clr-namespace:Wrecept.Views.InvoiceParts"
        xmlns:views="clr-namespace:Wrecept.Views"
        Title="Számlakezelő"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackground}"
        Width="1000" Height="650">
    <Window.InputBindings>
        <KeyBinding Key="S" Modifiers="Control" Command="{Binding SaveCommand}" />
        <KeyBinding Key="Escape" Command="{Binding ExitToListCommand}" />
    </Window.InputBindings>

    <DockPanel>
        <views:MainMenu DockPanel.Dock="Top" x:Name="MenuBar" DataContext="{DynamicResource MainWindowViewModel}" />
        <Border DockPanel.Dock="Top" Background="{DynamicResource ErrorBrush}" Padding="{DynamicResource SpacingMedium}" Visibility="Collapsed">
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsDatabaseAvailable}" Value="False">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <TextBlock Text="Adatbázis hiba - a módosítások nem kerülnek mentésre." Foreground="White" />
        </Border>

        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="{DynamicResource SpacingLarge}">
            <Button Content="Mentés" Command="{Binding SaveCommand}" Margin="{DynamicResource SpacingSmall}" />
            <Button Content="Nyomtatás" Command="{Binding PrintCommand}" Margin="{DynamicResource SpacingSmall}" />
            <Button Content="Export" Command="{Binding ExportCommand}" Margin="{DynamicResource SpacingSmall}" />
            <Button Content="Bezárás" Command="{Binding ExitToListCommand}" />
        </StackPanel>

        <ip:InvoiceSidebar DockPanel.Dock="Left"
                              DataContext="{Binding SidebarViewModel}"
                              TabIndex="0" />
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ip:InvoiceHeader Margin="{DynamicResource SpacingLarge}"
                                 DataContext="{Binding HeaderViewModel}"
                                 TabIndex="1" />
            <ip:InvoiceItemsGrid Grid.Row="1" Margin="{DynamicResource SpacingLarge}"
                                    DataContext="{Binding ItemsViewModel}"
                                    TabIndex="2" />
            <ip:InvoiceSummary Grid.Row="2" Margin="{DynamicResource SpacingLarge}"
                                  DataContext="{Binding SummaryViewModel}"
                                  TabIndex="3" />
        </Grid>
    </DockPanel>
</Window>
