<Window x:Class="Wrecept.Views.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Beállítások" Height="200" Width="300"
        WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow"
        KeyDown="Window_KeyDown">
    <StackPanel Margin="10">
        <TextBlock Text="Téma" Margin="0,0,0,5" />
        <ComboBox SelectedItem="{Binding Theme}" >
            <ComboBoxItem Content="Light" />
            <ComboBoxItem Content="Dark" />
        </ComboBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Mentés" Command="{Binding SaveCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Margin="0,0,5,0" />
            <Button Content="Mégse" Command="{Binding CancelCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />
        </StackPanel>
    </StackPanel>
</Window>
