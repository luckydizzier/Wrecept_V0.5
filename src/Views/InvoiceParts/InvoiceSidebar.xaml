<UserControl x:Class="Wrecept.Views.InvoiceParts.InvoiceSidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="{DynamicResource SpacingLarge}">
        <TextBox x:Uid="Search" x:Name="SearchBox" Margin="{DynamicResource MarginBottomLarge}" TabIndex="0" />
        <DatePicker x:Name="FromDate" Margin="{DynamicResource MarginBottomSmall}" TabIndex="1" />
        <DatePicker x:Name="ToDate" Margin="{DynamicResource MarginBottomLarge}" TabIndex="2" />
        <ComboBox x:Name="SupplierFilter" Margin="{DynamicResource MarginBottomLarge}" TabIndex="3" />
        <DataGrid x:Name="InvoiceList"
                  ItemsSource="{Binding Invoices}"
                  SelectedItem="{Binding SelectedInvoice, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  Height="300"
                  RowHeight="26"
                  TabIndex="4"
                  PreviewKeyDown="InvoiceList_OnPreviewKeyDown">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Számlaszám" Binding="{Binding SerialNumber}" />
                <DataGridTextColumn Header="Dátum" Binding="{Binding IssueDate}" />
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>
