<Window x:Class="Wrecept.Views.MasterData.SupplierView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Suppliers_Title}" Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        KeyDown="Window_KeyDown">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding Suppliers}" SelectedItem="{Binding SelectedSupplier}" AutoGenerateColumns="False" TabIndex="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{DynamicResource Name_Header}" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="{DynamicResource Address_Header}" Binding="{Binding Address}" Width="*" />
                <DataGridTextColumn Header="{DynamicResource TaxId_Header}" Binding="{Binding TaxId}" Width="*" />
                <DataGridTextColumn Header="{DynamicResource BankAccount_Header}" Binding="{Binding BankAccountNumber}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Uid="New_Button" Content="{DynamicResource New_Button}" Command="{Binding AddCommand}" Margin="0,0,5,0" TabIndex="1" />
            <Button x:Uid="Save_Button" Content="{DynamicResource Save_Button}" Command="{Binding SaveCommand}" Margin="0,0,5,0" TabIndex="2" />
            <Button x:Uid="Delete_Button" Content="{DynamicResource Delete_Button}" Command="{Binding DeleteCommand}" TabIndex="3" />
        </StackPanel>
    </Grid>
</Window>
