<Window x:Class="Wrecept.Views.MasterData.SupplierView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Szállítók" Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        KeyDown="Window_KeyDown">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding Suppliers}" SelectedItem="{Binding SelectedSupplier}" AutoGenerateColumns="False" TabIndex="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Név" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="Cím" Binding="{Binding Address}" Width="*" />
                <DataGridTextColumn Header="Adószám" Binding="{Binding TaxId}" Width="*" />
                <DataGridTextColumn Header="Bankszámla" Binding="{Binding BankAccountNumber}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Új" Command="{Binding AddCommand}" Margin="0,0,5,0" TabIndex="1" />
            <Button Content="Mentés" Command="{Binding SaveCommand}" Margin="0,0,5,0" TabIndex="2" />
            <Button Content="Törlés" Command="{Binding DeleteCommand}" TabIndex="3" />
        </StackPanel>
    </Grid>
</Window>
