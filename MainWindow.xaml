<Window x:Class="Wrecept.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wrecept"
        xmlns:viewModels="clr-namespace:Wrecept.ViewModels"
        mc:Ignorable="d"
        Title="Főablak" Height="450" Width="800"
        DataContext="{DynamicResource MainWindowViewModel}">
    <Window.Resources>
        <viewModels:MainWindowViewModel x:Key="MainWindowViewModel" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Greeting}" Margin="10" />
        <DataGrid x:Name="InvoiceGrid"
                  Grid.Row="1"
                  ItemsSource="{Binding Invoices}"
                  AutoGenerateColumns="False"
                  TabIndex="0"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Sorszám" Binding="{Binding SerialNumber}" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Új számla" Command="{Binding AddInvoiceCommand}" Margin="0,0,5,0" />
            <Button Content="Törlés" Command="{Binding DeleteInvoiceCommand}" CommandParameter="{Binding SelectedItem, ElementName=InvoiceGrid}" />
        </StackPanel>
    </Grid>
</Window>
