<Window x:Class="Wrecept.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wrecept"
        xmlns:viewModels="clr-namespace:Wrecept.ViewModels"
        mc:Ignorable="d"
        Title="Főablak" Height="450" Width="800"
        DataContext="{DynamicResource MainWindowViewModel}">
    <Window.Resources>
        <viewModels:MainWindowViewModel x:Key="MainWindowViewModel" />
    </Window.Resources>
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Greeting}" Margin="10"/>
            <Button Content="Köszönj" Command="{Binding ShowGreetingCommand}" TabIndex="0" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
